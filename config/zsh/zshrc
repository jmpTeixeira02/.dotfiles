# MacOS C Lib errors
if [[ "$(uname)" == "Darwin" ]]; then
    export PATH=/Library/Developer/CommandLineTools/usr/bin:$PATH
    export SDKROOT=$(xcrun --sdk macosx --show-sdk-path)
fi

